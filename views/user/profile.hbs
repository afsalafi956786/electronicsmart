{{> layouts}}

<!-- Featured Start -->

<body>
    {{> userHeader}}

    <!-- Checkout Section Begin -->
    <section class="checkout spad">
        <div class="container">
            <div class="row">

            </div>

            <div class="row">

                <div class="col-lg-8">

                    

                    <form action="/add-address" method="POST" class="checkout__form">

                        <h5>Add address</h5>

                        <div class="row">
                            
                               
                                <div class="checkout__form__input">
                                    <p>Name <span>*</span></p>
                                    <input type="text" name="name" id="name"  placeholder="Enter your name" required>
                                </div>
                          

                            <div class="col-lg-12">
                                <div class="col col-md-12 col-lg-12">
                                    <label for="" class="form-control-label">Address</label>
                                </div>
                                <div class="col-12 col-md-12 col-lg-12">
                                    <textarea name="address" id="address" rows="5"
                                        placeholder="Enter you delivery address" class="form-control" required></textarea>
                                </div>
                                <div class="checkout__form__input">
                                    <p> City/street<span>*</span></p>
                                    <input type="text" name="city" id="city" placeholder="Enter your city or street" required>
                                </div>
                                   <div class="checkout__form__input">
                                    <p>Pincode <span>*</span></p>
                                    <input type="text" name="pincode" id="pincode" placeholder="Enter your pincode" required>
                                </div>
                    
                            
                                
                                      <div class="checkout__form__input">
                                    <p>Phone <span>*</span></p>
                                    <input type="text"  name="phone" id="mobile" placeholder="Enter your mobile number" required>
                                </div>

                                     <div class="checkout__form__input">
                                    <p>state<span>*</span></p>
                                    <input type="text" name="state" id="state" placeholder="Enter you state" required>
                                </div>
                                    <button type="submit" class="btn btn-success" href="#">
                                        <i class="icon-shopping-cart icon-large"></i> Add Address</button>
                            

                            </div>

                        </div>
                </div>
                </form>
            </div>

            {{!-- <address> --}}


                <div class="row mt-5">
                    {{#each address.address}}
                    <div class="col-lg-4">
                        <div class="checkout__order">
                            <h5>Your Address</h5>
                            <div class="checkout__order__product">




                                <h6 class="text-center">{{this.name}}</h6>
                                <h6 class="text-center">{{this.address}}</h6>
                                <h6 class="text-center">{{this.phone}} </h6>
                                <h6 class="text-center">{{this.city}}</h6>
                                <h6 class="text-center">{{this.pincode}}</h6>
                                <h6 class="text-center">{{this.state}}</h6>



                            </div>
                            <div>

                            </div>
                            <button style="border: none;color: rgb(255, 148, 9);" type="submit" class="btn btn mt-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        <i class="icon-shopping-cart icon-large"></i> Edit</button>
                            <button style="border: none;color:red" type="button" onclick="deleteAddress('{{this._id}}')" class="btn btn mt-3 ml-2">
                                <i class="icon-shopping-cart icon-large"></i>Delete</button>
                               



                        </div>
                    </div>


                    
                    {{/each}}


                </div>


        </div>



    </section>


    <!-- Button trigger modal -->


    <!-- Modal -->
    <div class="modal fade" id="exampleModal{{@index}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <form action="/edit-address?id={{@index}}" method="POST">
            <div class="modal-content">
                    <div class="modal-body">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-header">
                                    <strong>Address</strong>

                                </div>
                                <div class="card-body card-block">
                                    <div class="form-group">
                                        <label for="country" class=" form-control-label">Name</label>
                                        <input type="text" name="name" id="name" value="{{address.name}}"
                                            placeholder="Enter your name" class="form-control"  required>
                                    </div>
                                    <div class="col col-md-12 col-lg-12">
                                        <label for="" class="form-control-label ">Address</label>
                                    </div>
                                    <div class="col-12 col-md-12 col-lg-12">
                                        <textarea name="address" id="address" rows="9"
                                            placeholder="Enter you delivery address" class="form-control"
                                            value="{{address.address}}"  required></textarea>
                                    </div>
                                    <div class="col-8">
                                        <div class="form-group">
                                            <label for="city" class=" form-control-label">City/street</label>
                                            <input type="text" name="city" id="city" value="{{address.city}}"
                                                placeholder="Enter your city or street" class="form-control" required>
                                        </div>
                                    </div>
                                    <div class="col-8">
                                        <div class="form-group">
                                            <label for="postal-code" class=" form-control-label">Pin
                                                code</label>
                                            <input type="number" name="pincode" id="pincode" value="{{address.pincode}}"
                                                placeholder="Enter your pin code" class="form-control"  required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="street" class=" form-control-label">phone</label>
                                        <input type="text" name="phone" id="mobile" value="{{address.phone}}"
                                            placeholder="Enter youe mobile number" class="form-control"  required>
                                    </div>
                                    <div class="form-group">
                                        <label for="country" class=" form-control-label">State</label>
                                        <input type="text" name="state" id="state" {{address.state}}
                                            placeholder="Enter your state" class="form-control"  required>
                                        {{!-- <input type="text" name="userId" id value="{{user._id}}" hidden> --}}
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">Save changes</button>
                    </div>
                
            </div>
            </form>
        </div>
    </div>

    <!-- Checkout Section End -->


</body>


{{> userFooter}}
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>



<script>
    function deleteAddress(addressId) {

        Swal.fire({
            title: 'Are you sure want to delete?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire(
                    'Deleted!',
                    'Your address  deleted.',
                    'success'
                )
                $.ajax({
                    url: '/delete-address',
                    method: 'post',
                    data: {
                        address: addressId,
                    },
                    success: (response) => {
                        setTimeout(() => {
                            window.location.href='/account'

                        }, 1500)
                    }
                })


            }
        })
    }

</script>