<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Signup Page</title>
    <link rel="stylesheet" href="/users/signup.css" />

  </head>
  <body>
    <div class="content">
      <div class="flex-div ">
        <div class="name-content">
          <h1 class="logo"></h1>
          <a href="/">
          <img src="/users/img/electronecsmart.png " width="400px"></a>
          <h4 style="margin-left: 40px;">Looks like you're new here!</h4>

        <p style="padding: 30px;">Sign up with your mobile number to get started</p>
        </div>
          <form action="/signup" method="POST">
            <label for="" class="form-label">Name</label> <p style="color: red;">{{sigErr}}</p>
            <div id="errorFullname"></div>
            <input type="text" name="name" id="username" placeholder="Your Name" />
             <label for="" class="form-label">Email</label>  <p style="color: red;">{{checkEmailErr}}</p> 
              <div id="errorEmail"></div> 
            <input type="text" name="email" id="userEmail" placeholder="Email">
             <label for="" class="form-label">Password</label>
                  <div id="errorPassword"></div>
             <input type="password" name="password" id="userPassword" placeholder="Password"  />

              <label for="" class="form-label">Confirm Password</label><p style="color: red;">{{checkErr}}</p> 
                   <div id="errorConformpassword"></div>      
              <input type="password" name="confirmPass" id="confirmpassword" placeholder="confirm Password"  />
              <label for="" class="form-label">Mobile</label>
                   <div id="errorPhone"></div>
              <input type="text" name="phone" id="userphone" placeholder="Mobile Number"  />
              
            <button id="btn-submit" type="submit"  class="login">Signup</button>
          
            <hr>
            <a href="/signin">Existing User? Log in</a>
          </form>
      </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
 

   <script>    
    
        $("#btn-submit").click(function () { 
          console.log('vallu')          
          $(".errorMessages").hide();
          var hasError = false;
          var emailReg = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;
          var emailaddressVal = $("#userEmail").val();
          var PasswordVal = $("#userPassword").val();
          var usernameVal = $("#username").val();
          var confirmpasswordval = $("#confirmpassword").val();
          var mobileVal = $("#userphone").val();
          if (emailaddressVal == "") {
            $("#errorEmail").after(
              '<p class="errorMessages" >This is required. Please enter a  email.</p>'
            );
            hasError = true;
          }
          if (usernameVal == "") {
            $("#errorFullname").after(
              '<p class="errorMessages">This is required. Please enter a  name</p>'
            );
            hasError = true;
          }
          if (PasswordVal == "") {
            $("#errorPassword").after(
              '<p class="errorMessages">This is required. Please enter a password</p>'
            );
            hasError = true;
          }
          if (confirmpasswordval !== PasswordVal) {
            $("#errorConformpassword").after(
              '<p class="errorMessages">confirm password is wrong.</p>'
            );
            hasError = true;
          }
          if (mobileVal == "") {
            $("#errorPhone").after(
              '<p class="errorMessages">This is required. Please enter your phone number</p>'
            );
            hasError = true;
          }
          if (hasError == true) {
            return false;
          }
        });
    </script>
    <style>
      .errorMessages{
        color: red;
        font-size: small;
        font-family: 'Poppins';
      }
    </style>





  </body>
</html>
