{{> adminLayout}}

<body>
    <div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <h3> Admin Sign in</h3>
                        </div>
                        <div class="login-form">
                           
                            <form action="/admin/signin" method="POST">
                                <div class="form-group">
                                    {{!-- <p style="color: red;">{{nullError}}</p> --}}
                                    <label>Email</label> <p style="color: red;">{{adminEmailErr}}</p>
                                     <p style="color: red;">{{nullError}}</p>
                                    <input class="au-input au-input--full" type="email" name="email"
                                        placeholder="Enter your email">
                                </div>
                                <div class="form-group">
                                    <label>Password</label>  <p style="color: red;">{{adminPassErr}}</p>
                                    <input class="au-input au-input--full" type="password" name="password"
                                        placeholder="Enter your Password">
                                </div>
                                <div class="login-checkbox">
                                    <label>
                                        <input type="checkbox" name="remember">Remember Me
                                    </label>
                                    <label>
                                        <a style="color: black;" href="#">Forgotten Password?</a>
                                    </label>
                                </div>
                                <button  class="au-btn au-btn--block au-btn--green m-b-20" type="submit">sign in</button>
                                <div class="social-login-content">
                                   
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    {{> adminScript}}
</body>
<!-- end document-->